@model List<Book>
<section class="main-content-w3layouts-agileits">
<div class="container">
    <h3 class="tittle">Kitaplar</h3>
    <div class="inner-sec">
        <!--left-->
        <div class="left-blog-info-w3layouts-agileits text-left">
            <div class="row">
                @foreach (var item in Model)
                {


                    <div class="col-lg-4 card">
                        <a href="single.html">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.BookImage)" class="card-img-top img-fluid" style="width: 300px; height: auto;" alt="">
                        </a>
                        <div class="card-body">
                            <ul class="blog-icons my-4">
                              @*  <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @(((DateTime)
                                    item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                    </a>
                                </li>*@
                               
                                <li>
                                    <a href="#">
                                        <i class="fas fa-eye"></i> @item.Category.Name
                                    </a>
                                </li>

                            </ul>
                            <h5 class="card-title">
                                @*<a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogTitle</a>*@
                                <a >@item.Name</a>
                            </h5>
                                <p class="card-text mb-3">@item.About</p>
                            @*<a href="/Blog/BlogReadAll/@item.BookId" class="btn btn-primary read-m">Devamını Oku</a>*@
                        </div>
                    </div>
                }
            </div>
            <!--//left-->
        </div>
    </div>
</div>
</section>