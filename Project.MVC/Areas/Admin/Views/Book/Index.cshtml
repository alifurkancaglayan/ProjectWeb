@{
}
@model List<Book>

<h1>Kitaplar</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Kitap Görseli</th>
            <th scope="col">Hakkında</th>
            <th scope="col">Kategori</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.BookImage)" style="width: 300px; height: auto;" alt="Kitap Görseli" />
                </td>
                <td>@item.About</td>
                <td>@item.Category.Name</td>

                <td>
                    <a class="btn btn-danger" asp-controller="Book" asp-action="Delete" asp-route-bookId="@item.Id"> Sil</a>
                    <a class="btn btn-info" asp-controller="Book" asp-action="Update" asp-route-bookId="@item.Id"> Güncelle</a>
                </td>
            </tr>

        }


    </tbody>
</table>

<a href="/Admin/Book/Add" class="btn btn-info"> Kitap Ekle</a>