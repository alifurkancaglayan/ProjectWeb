@{
}
@model List<Category>

    <h1>Kategoriler</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@item.Id"> Sil</a>
                    <a class="btn btn-info" asp-controller="Category" asp-action="Update" asp-route-categoryId="@item.Id"> Güncelle</a>
                </td>
            </tr>

        }


    </tbody>
</table>

<a href="/Admin/Category/Add" class="btn btn-info"> Kategori Ekle</a>